@page
@model RzrPgsDemoApp.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

@if (Model.Order is null)
{
    <h4>The requested item wasn't found.</h4>
}
else
{
    <div class="h4">
        Are you sure you want to delete the order from @Model.Order.OrderDate?
    </div>
    <form method="post">
        <input asp-for="Id" value="@Model.Id" type="hidden" />
        <!--Like in the Create page, we want to affect this model's Id
            and the data we start with comes from this Model.Id.
            In this case, the same info in both parts.-->
        <div class="form-group">
            <input type="submit" value="Delete this order" class="btn btn-danger" />
        </div>
    </form>
}